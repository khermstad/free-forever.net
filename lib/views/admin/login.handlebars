{{#if admin_login_error_message}}
     <div class="alert alert-danger">
        <strong>{{admin_login_error_message}}</strong> 
     </div>
{{/if}}

 <form action="/admin" method="post" id="loginForm">
        <div class="form-group">
            <label for="email">Admin:</label>
            <input type="text" name="admin" class="form-control" placeholder="Enter your admin id" required>
        </div>
        <div class="form-group">
            <label for="password">Confirm Password:</label>
            <input type="password" name="adminpass" class="form-control" placeholder="Enter Password" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="$('#loginForm').trigger('reset');">Clear</button>
        </div>
        <br>
    </form>